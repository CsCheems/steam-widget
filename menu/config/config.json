{
  "app": {
    "title": "Achievement Tracker",
    "subtitle": "Show your achievement progress to your friends.",
    "brandLabel": "Steam Achievement Tracker"
  },
  "base": {
    "baseUrlLabel": "Widget base URL",
    "baseUrlPlaceholder": "https://cscheems.github.io/steam-widget/",
    "defaultBaseUrl": "https://cscheems.github.io/steam-widget/"
  },
  "sections": [
    {
      "id": "steamAuth",
      "title": "Steam Credentials",
      "description": "Enter your Steam Web API Key and Steam ID.",
      "authSection": true,
      "fields": [
        {
          "type": "password",
          "id": "steam_web_key",
          "label": "Steam Web API Key",
          "param": "steam_web_key",
          "placeholder": "Steam Web API Key"
        },
        {
          "type": "text",
          "id": "steam_id",
          "label": "Steam ID",
          "param": "steam_id",
          "placeholder": "Steam ID (64-bit)"
        }
      ]
    },
    {
      "id": "widgetBehaviour",
      "title": "Behavior",
      "description": "Number of rotating achievements, auto-hide time, language.",
      "fields": [
        {
          "type": "range",
          "id": "numeroLogros",
          "label": "Number of achievements to rotate through",
          "param": "numeroLogros",
          "default": 3,
          "min": 1,
          "max": 5,
          "step": 1,
          "suffix": ""
        },
        {
          "type": "range",
          "id": "hideAfter",
          "label": "Auto-hide after N seconds",
          "param": "hideAfter",
          "default": 10,
          "min": 0,
          "max": 30,
          "step": 1,
          "suffix": ""
        },
        {
            "type": "select",
            "id": "language",
            "label": "Language",
            "param": "language",
            "default": "en",
            "options": [
                { "value": "en", "label": "English" },
                { "value": "spanish", "label": "Spanish" },
                { "value": "latam", "label": "Spanish Latam" },
                { "value": "french", "label": "French" },
                { "value": "german", "label": "German" },
                { "value": "italian", "label": "Italian" },
                { "value": "russian", "label": "Russian" }  
            ]
        }
      ]
    },
    {
      "title": "Streamerbot",
      "description": "Streamerbot connection settings. This lets the widget auto-update your stream category when you launch a game on Steam.",
      "fields": [
        {
          "type": "switch",
          "id": "allowSb",
          "label": "Connect to Streamerbot",
          "param": "allowSb",
          "default": false
        },
        {
          "type": "text",
          "id": "hostInput",
          "label": "Host",
          "param": "hostInput",
          "default": "127.0.0.1",
          "placeholder": "127.0.0.1"
        },
        {
          "type": "text",
          "id": "portInput",
          "label": "Port",
          "param": "portInput",
          "default": "8080",
          "placeholder": "8080"
        }
      ]
    }
  ]
}
